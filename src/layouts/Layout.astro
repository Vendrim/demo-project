---
import { DarkNavbar } from "@/components/dark-navbar";
import { DarkBreadcrumb } from "@/components/dark-breadcrumb";

interface Props {
	title: string;
}

const { title } = Astro.props;

const breadcrumbItems = [
	{ label: "Projects", href: "/projects" },
	{ label: "Web Development", href: "/projects/web-development" },
	{
		label: "React Application",
		href: "/projects/web-development/react-application",
	},
];
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='A demo page to showcase work' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<DarkNavbar client:idle />
	<DarkBreadcrumb items={breadcrumbItems} />

	<slot />


</html>
